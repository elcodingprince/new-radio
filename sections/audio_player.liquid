{% schema %}
{
  "name": "Audio Player",
  "settings": [
        {
      "type": "product",
      "id": "src_product_audio",
      "label": "Product"
    }
  ],
  "presets": [
    {
      "name": "Audio Player",
      "category": "Product"
    }
  ]
}
{% endschema %}

{% if product.tags contains 'audio' %}
  <div class="custom-audio-player">
  <audio id="audioPlayer" controls>
    <source src="{{ card_product.metafields.product.audio.value.url }}" type="audio/mpeg">
    Your browser does not support the audio element.
  </audio>
  <button id="playPauseButton" class="play">Play</button>
</div>
{% endif %}

{% stylesheet %}
.product-audio-player {
  margin: 20px 0;
}
{% endstylesheet %}
