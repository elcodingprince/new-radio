{% schema %}
{
  "name": "Audio Player",
  "settings": [],
  "presets": [
    {
      "name": "Audio Player",
      "category": "Product"
    }
  ]
}
{% endschema %}

{% if product.tags contains 'audio' %}
  <div class="product-audio-player">
    <audio controls>
      <source src="{{ product.metafields.product.audio.value.url }}" type="audio/mpeg">
      Your browser does not support the audio element.
    </audio>
  </div>
{% endif %}

{% stylesheet %}
.product-audio-player {
  margin: 20px 0;
}
{% endstylesheet %}
