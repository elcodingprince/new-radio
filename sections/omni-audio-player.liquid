<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Audio Player</title>
    <!-- Include CSS stylesheets -->
    <link rel="stylesheet" href="omni-audio-player.css">
    <!-- Include Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="background"></div>
    <div class="container">
        <!-- Product Image and Title -->
        <div class="product-img">
            <img src="" class="active" id="cover" />
        </div>
        <h2 id="product-title"></h2>
        <!-- Player Progress Bar -->
        <div class="player-progress" id="player-progress">
            <div class="progress" id="progress"></div>
            <div class="music-duration">
                <span id="current-time">0:00</span>
                <span id="duration">0:00</span>
            </div>
        </div>
        <!-- Player Controls -->
        <div class="player-controls">
            <i class="fa-solid fa-backward previous-button" title="Previous" id="prev"></i>
            <!-- Product Play Button -->
            <i class="fa-solid fa-play play-button" title="Play" id="productPlayBtn"></i>
            <i class="fa-solid fa-forward" title="Next" id="next"></i>
        </div>
    </div>
    <!-- Include JavaScript file -->
    <script src="Omni-audio-player.js" defer></script>
</body>
</html>