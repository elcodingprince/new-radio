<div class="omni-audio-player">
  <audio id="stickyAudioPlayer" controls>
    Your browser does not support the audio element.
  </audio>
</div>

{% javascript %}
// JavaScript to handle audio playback
var stickyAudioPlayer = document.getElementById('stickyAudioPlayer');

function playAudio(audioUrl) {
  stickyAudioPlayer.src = audioUrl;
  stickyAudioPlayer.play();
}

// Example usage: Assuming you have play buttons with class "play-button" associated with each audio file
var playButtons = document.querySelectorAll('.play-button');
playButtons.forEach(function(button) {
  button.addEventListener('click', function() {
    var audioUrl = this.dataset.audioUrl;
    playAudio(audioUrl);
  });
});
{% endjavascript %}


