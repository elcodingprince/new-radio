<h2>{{ collections['raeggeton'].title }}</h2>

{% for product in collections['raeggeton'].products %}
    <div>
        <img src="{{ product.featured_image | img_url: '200x200' }}" alt="{{ product.title | escape }}">
        <h3>{{ product.title | link_to: product.url }}</h3>
        <p>{{ product.price | money }}</p>
    </div> 
{% endfor %} 

{%- if card_product.metafields.custom.audio -%}
  <div class="play-button-overlay">
    <button class="play-button" data-audio="{{ card_product.metafields.custom.audio }}">
      <i class="fa-solid fa-play"></i>
    </button>
  </div>
{%- endif -%}